<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:padding="10dp"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout

        android:id="@+id/ll_edit_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/self_book_edit_bg"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_all_selecter"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/vector_drawable_all_selecter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全选"/>

        <TextView
            android:id="@+id/tv_delete"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/vector_drawable_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除"
            />

        <TextView
            android:id="@+id/tv_top"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/vector_drawable_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:text="置顶"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:textSize="10sp"
            android:gravity="center"
            android:drawableTop="@drawable/vector_drawable_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"/>

    </LinearLayout>


</LinearLayout>



